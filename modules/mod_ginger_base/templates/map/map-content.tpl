"{% for id in item[2]|default:[item] %}<a class='marker' href='{{ id.page_url }}'><div class='marker__item'{% if id.depiction %}style='background-image: url({% image_url id mediaclass="list-image" %})'{% endif %}><div class='marker__item__content'><div class='marker__item__content__category'><i class='icon--{{ id.category.name }}'></i>{{ m.rsc[id.category.id].title|escape }}</div>{% if id.start_date|date:"Y" %}<time datetime='{{ id.start_date|date:"Y-F-jTH:i" }}' class='marker__item__content__date'>{{ id.date_start|date:"j M Y - H:i" }}</time>{% endif %}<h3 class='marker__item__title'>{% if id.short_title %}{{ id.short_title|truncate:50|escape }}{% else %}{{ id.title|truncate:50|escape }}{% endif %}</h3>{% if id.summary %}<p>{{ id.summary|truncate:100|escape }}</p>{% endif %}</div></div></a>{% endfor %}"
